<p id="notice"><%= notice %></p>

<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Foto</th>
      <th>Cargo</th>
      <th>Data de aniversário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.photo %></td>
        <td><%= user.role %></td>
        <td><%= user.birth_date %></td>
        <td><%= link_to 'Exibir', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo usuário', new_user_path, class: "btn btn-primary", style: 'color:#FFF;' %>
